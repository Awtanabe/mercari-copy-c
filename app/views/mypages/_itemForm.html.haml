.wrapperSellingItemInfo
  %h1.wrapperSellingItemName
    = @item.name
  .wrapperSellingItemInfolLeftRight
    .wrapperSellingItemInfolLeft
      .wrapperSellingItemInfoLeftMainimage
        = image_tag '1.jpeg', size: '300x300', class: 'dog1'
      .wrapperSellingItemInfoLeftSubimage
        .wrapperSellingItemInfoLeftSubimages
          = image_tag '2.jpeg', size: '75x75', class: 'dog2'
        .wrapperSellingItemInfoLeftSubimages
          = image_tag '3.jpeg', size: '75x75', class: 'dog3'
        .wrapperSellingItemInfoLeftSubimages
          = image_tag '4.jpeg', size: '75x75', class: 'dog4'
        .wrapperSellingItemInfoLeftSubimages
          = image_tag '5.jpeg', size: '75x75', class: 'dog5'
    .wrapperSellingItemInfoRight
      .wrapperSellingItemInfoRightTable
        %table{:border => "1"}
          %tr
            %th.tableLeft 出品者
            %th.tableRight
              = link_to "seller_name","#",class: "tableLinks"
          %tr
            %td.tableLeft カテゴリー
            %td.tableRight
              = link_to "category_top","#",class: "tableLinks"
              %br
              = link_to "> category_mid","#",class: "tableLinks"
              %br
              = link_to "> category_bottom","#",class: "tableLinks"
          %tr
            %td.tableLeft ブランド
            %td.tableRight
              = link_to "brand","#",class: "tableLinks"
          %tr
            %td.tableLeft 商品のサイズ
            %td.tableRight S
          %tr
            %td.tableLeft 商品の状態
            %td.tableRight
              = @item.status
          %tr
            %td.tableLeft 配送料の負担
            %td.tableRight
              = @item.shipping_fare
          %tr
            %td.tableLeft 配送の方法
            %td.tableRight
              = @item.shipping_method
          %tr
            %td.tableLeft 配送元地域
            %td.tableRight
              = link_to "アメリカ","#",class: "tableLinks"
          %tr
            %td.tableLeft 発送日の目安
            %td.tableRight 2~3日で発送
  .wrapperSellingItemInfoPriceBox
    .wrapperSellingItemInfoPrice
      ¥
      %span
        = @item.price
    .wrapperSellingItemInfoTax (税込)
    .wrapperSellingItemInfoFare 送料込み
  .wrapperSellingItemInfoDescription
    = @item.explaination
