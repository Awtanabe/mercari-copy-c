.signinWrapper
  .signinMain
    .signinPanel
      .signinNoAccount
        %p アカウントをお持ちでない方はこちら
        =link_to "新規会員登録", "#", class: "signinCardSignup"
      %hr.horizon
      .signinForm
        .signinFormFacebook
          = link_to "#" do
            =fa_icon 'fa-facebook-f', class: 'fa-facebook-square'
            .signinFormFacebookCard
              Facebookでログイン
        .signinFormGoogle
          = link_to "https://www.google.co.jp/" do
            =fa_icon 'fa-google-plus-square', class: 'fa-google-plus'
            .signinFormGoogleCard
              Googleでログイン
      .signinFormWrapper
        .signinForm
          = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
            .signinFormEmail
              = f.email_field :email, placeholder: "  メールアドレス", autofocus: true
            .signinFormPassword
              = f.password_field :password, placeholder: "  パスワード", autocomplete: "off"
            .signinFormRecapcha
              %img{alt: "ロボットではありません", height: "75", src: "https://i.gyazo.com/558c420173f936369c4fd6afb54e149b.png", width: "300"}
            .signinFormButton
              = f.submit "ログイン", class: "signinFormButton"
            .signinFormForgetPassword
              =link_to "パスワードをお忘れの方", "#"
