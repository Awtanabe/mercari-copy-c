.signinWrapper
  .signinMain
    .signinPanel
      .signinNoAccount
        %p アカウントをお持ちでない方はこちら
        =link_to new_user_registration_path, class: "signinCardSignup" do
          新規会員登録
      %hr.horizon
      .signinForm
        .signinFormFacebook
          = link_to "#" do
            =fa_icon 'fa-facebook-f', class: 'fa-facebook-square'
            .signinFormFacebookCard
              =link_to "Facebookでログイン",  user_facebook_omniauth_authorize_path
        .signinFormGoogle
          = link_to "https://www.google.co.jp/" do
            =fa_icon 'fa-google-plus-square', class: 'fa-google-plus'
            .signinFormGoogleCard
              =link_to "Googleでログイン" ,user_google_oauth2_omniauth_authorize_path
      .signinFormWrapper
        .signinForm
          = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
            .signinFormEmail
              = f.email_field :email, placeholder: "  メールアドレス", autofocus: true
            .signinFormPassword
              = f.password_field :password, placeholder: "  パスワード", autocomplete: "off"
            .signinFormRecapcha
              = image_tag "https://i.gyazo.com/558c420173f936369c4fd6afb54e149b.png", class: "signinFormRecapcha"
            .signinFormButton
              = f.submit "ログイン", class: "signinFormButton"
            .signinFormForgetPassword
              =link_to "パスワードをお忘れの方", "#"
